@require '../../../../stylus/variables.styl'

.block-header
	width 100%
	box-sizing border-box
	padding 60px 90px

	h1,
	p
		width 100%
		display block
		max-width $contentMaxWidth
		margin-right auto
		margin-left auto

	h1
		margin-top 10px
		margin-bottom 10px

	p
		margin-top 5px
		margin-bottom 5px
		font-size 18px
		line-height 26px
